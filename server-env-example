# Server Configuration
PORT=5000
NODE_ENV=development

# Database
# Local MongoDB: mongodb://localhost:27017/biogas_waste_marketplace
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/biogas_waste_marketplace
MONGODB_URI=mongodb://localhost:27017/biogas_waste_marketplace

# JWT Authentication
# Generate a random string: openssl rand -base64 32
# Or use: https://randomkeygen.com/
JWT_SECRET=change_this_to_a_random_secret_string_minimum_32_characters_long_for_security
JWT_EXPIRE=7d

